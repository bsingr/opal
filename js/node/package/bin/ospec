#!/usr/bin/env node

/**
  Bin file to load ospec
*/
var path  = require('path'),
    fs    = require('fs'),
    sys   = require('sys'),
    print = function(str) { console.log(str); };

var lib = path.join(path.dirname(fs.realpathSync(__filename)), '..', 'lib');
print("lib path is: " + lib);

require(lib + '/opal').gem_runner("ospec", "spec");

